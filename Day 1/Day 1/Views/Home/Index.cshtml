@{
    ViewData["Title"] = "Home Page";
}


<!-- Hero Section -->
<section class="hero">
    <div>
        <h1>Welcome to BECK</h1>
        <p>Your one-stop shop for Clothes, Furniture, and Food</p>
        <button onclick="location.href='Offers.html'">Shop Now</button>
    </div>
</section>

<!-- Categories Section -->
<section class="categories">
    <div class="category">
        <img src="images/clothes 1.jpg" alt="Clothes">
        <h3>Clothes</h3>
        <button onclick="location.href='clothes.html'">Explore</button>
    </div>
    <div class="category">
        <img src="images/Furniture 1.jpg" alt="Furniture">
        <h3>Furniture</h3>
        <button onclick="location.href='furniture.html'">Explore</button>
    </div>
    <div class="category">
        <img src="images/food 1.jpg" alt="Food">
        <h3>Food</h3>
        <button onclick="location.href='food.html'">Explore</button>
    </div>
</section>

<!-- Featured Products Section -->
<section class="featured">
    <h2>Featured Products</h2>
    <div class="featured-grid">
        <div class="product-card">
            <img src="images/clothes 2.jpg" alt="Product 1">
            <h3>Product 1</h3>
            <button onclick="location.href='Product Page.html'">View Details</button>

        </div>
        <div class="product-card">
            <img src="images/Furniture 2.jpg" alt="Product 2">
            <h3>Product 2</h3>
            <button onclick="location.href='Product Page.html'">View Details</button>
        </div>
        <div class="product-card">
            <img src="images/food 2.jpg" alt="Product 3">
            <h3>Product 3</h3>
            <button onclick="location.href='Product Page.html'">View Details</button>
        </div>
    </div>
</section>

<!-- Testimonials Section -->
<section class="testimonials">
    <h2>What Our Customers Say</h2>
    <div class="testimonial-grid">
        <div class="testimonial-card">
            <img src="images/person 1.jpg" alt="Customer 1">
            <p>"BECK has amazing products and great service! I love shopping here."</p>
        </div>
        <div class="testimonial-card">
            <img src="images/person 2.jpg" alt="Customer 2">
            <p>"Fantastic variety and affordable prices. Highly recommend!"</p>
        </div>
        <div class="testimonial-card">
            <img src="images/person 3.jpg" alt="Customer 3">
            <p>"The quality of the furniture I bought was excellent. Will shop again!"</p>
        </div>
    </div>
</section>
