<!-- Login Container -->
<div class="login-container">
    <h1>Welcome Back!</h1>
    <p>Login to explore exclusive offers on Furniture, Clothes, and Food.</p>

    <form action="/dashboard.html" method="post">
        <div class="form-group">
            <label for="email">Email Address</label>
            <input type="email" id="email" name="email" placeholder="Enter your email" required>
        </div>
        <div class="form-group">
            <label for="password">Password</label>
            <input type="password" id="password" name="password" placeholder="Enter your password" required>
        </div>

        <button type="submit" onclick="location.href='profile.html'" class="login-btn">Login</button>
    </form>

    <!-- Or Sign In -->
    <div class="or-signin">
        <p>or <a asp-controller="Home" asp-action="Offers">Sign Up</a> if you don't have an account</p>
        

    </div>

</div>