@model IEnumerable<New_Project.Models.Product>






<div style="text-align:center">
   
    <div style="display:flex; gap:30px;">
        @foreach (var item in Model)
        {



            <div class="card" style="width: 18rem;">
                <img src="@item.Image" class="card-img-top" alt="...">
                <div class="card-body">
                    <h5 class="card-title">@item.Name</h5>
                    <p class="card-text">@item.Description</p>
                    <p class="card-text">Price:@item.Price</p>

                    <a class="btn btn-primary" asp-controller="Products" asp-action="Details" asp-route-id="@item.Id">View details</a>
                    <a class="btn btn-warning" asp-controller="Products" asp-action="Edit" asp-route-id="@item.Id">Edit</a>
                    <a class="btn btn-danger" asp-controller="Products" asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                </div>
            </div>





        }
    </div>
    

</div>
